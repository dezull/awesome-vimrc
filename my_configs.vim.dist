""""""""""""""""""
" => GUI Settings
""""""""""""""""""
if has("gui_running")
    set guioptions-=T

    if has("gui_gtk2")
        set guifont=Hack\ 11
        " Ctrl-C + Ctrl+V
        vmap <C-c> "+yi
        vmap <C-x> "+c
        vmap <C-v> c<ESC>"+p
        imap <C-v> <C-r><C-o>+
    elseif has("gui_win32")
        set guifont=Consolas:h11:cANSI
    endif
endif

let g:lightline = {
   \ 'colorscheme': 'wombat',
   \ 'active': {
